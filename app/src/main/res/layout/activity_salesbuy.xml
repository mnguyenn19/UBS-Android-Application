<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_buy"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:layout_marginTop="70dp"
tools:context=".Salesbuy"
android:background="@color/exchangeWhite"
android:scrollbarSize="5dp"
android:scrollbarStyle="outsideOverlay">

<TextView
    android:text="City"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView4"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/textView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:fontFamily="serif"
    android:textColor="@color/exchangeBlue"
    android:textStyle="normal|bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView4"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="36dp"
    android:id="@+id/textView5"
    android:fontFamily="serif"
    android:textColor="@color/exchangeBlue"
    android:textStyle="normal|bold"
    android:text="State" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="34dp"
    android:id="@+id/textView6"
    android:fontFamily="serif"
    android:textColor="@color/exchangeBlue"
    android:textStyle="normal|bold"
    android:text="Zip Code"
    android:layout_below="@+id/textView5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/editText3"
    android:layout_alignBaseline="@+id/textView3"
    android:layout_alignBottom="@+id/textView3"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:layout_alignTop="@+id/textView4"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/editText4"
    android:layout_alignLeft="@+id/editText3"
    android:layout_alignStart="@+id/editText3" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:layout_alignTop="@+id/textView5"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/editText5"
    android:layout_alignLeft="@+id/editText4"
    android:layout_alignStart="@+id/editText4" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPostalAddress"
    android:ems="10"
    android:layout_alignTop="@+id/textView6"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/editText6"
    android:layout_alignLeft="@+id/editText5"
    android:layout_alignStart="@+id/editText5" />

<Button
    android:text=" Make Payment "
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/create_event_button"
    android:background="@color/colorAccent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="openPayment_buy"
    android:textAppearance="@style/TextAppearance.AppCompat"
    android:fontFamily="serif"
    android:textStyle="normal|bold"
    android:textAllCaps="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:id="@+id/textView3"
    android:fontFamily="serif"
    android:textColor="@color/exchangeBlue"
    android:textStyle="normal|bold"
    android:text="Street Address"
    android:layout_below="@+id/textView2"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    android:fontFamily="serif"
    android:textColor="@color/exchangeBlue"
    android:textStyle="normal|bold"
    android:text="Shipping Address"
    android:textSize="18sp"
    android:layout_marginLeft="80dp"
    android:layout_marginRight="80dp"
    android:layout_marginTop="80dp"
    android:layout_below="@+id/spin"
    android:layout_toStartOf="@+id/textView"
    android:layout_marginEnd="69dp" />

<TextView
    android:text="Select Quantity"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:textColor="@color/exchangeBlue"
    android:textSize="18sp"
    android:textStyle="normal|bold"
    android:fontFamily="sans-serif-condensed"
    android:textAllCaps="false"
    android:layout_marginRight="31dp"
    android:layout_marginEnd="31dp"
    android:layout_marginTop="91dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true" />

<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/spin"
    android:entries="@array/itemQuantity"
    android:layout_marginRight="13dp"
    android:layout_marginTop="26dp"
    android:background="@color/exchangeBlue"
    android:popupBackground = "@color/exchangeBlue"
    android:layout_marginEnd="15dp"
    android:layout_below="@+id/textView"
    android:layout_alignEnd="@+id/textView">
</Spinner>

</RelativeLayout>