<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"


    tools:context=".LoginForgotPassword">


    <TextView
        android:id="@+id/loginSQTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Answer the following Security Questions"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"

        app:layout_constraintBottom_toTopOf="@id/loginSQ1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/loginSQ1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Security Question 1?"

        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@id/LoginSQ1Answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQTitle"
        />


    <EditText
        android:id="@+id/LoginSQ1Answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:password="true"

        android:hint="Answer to Security Question 1"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"

        app:layout_constraintBottom_toTopOf="@id/loginSQ2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQ1"
        />


    <TextView
        android:id="@+id/loginSQ2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Security Question 2?"

        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@id/loginSQ2Answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginSQ1Answer"
        />

    <EditText
        android:id="@+id/loginSQ2Answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:password="true"

        android:hint="Answer to Security Question 2"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"

        app:layout_constraintBottom_toTopOf="@id/loginSQ3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQ2"
        />

    <TextView
        android:id="@+id/loginSQ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Security Question 3?"

        android:textStyle="bold"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@id/loginSQ3Answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQ2Answer"
        />

    <EditText
        android:id="@+id/loginSQ3Answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:password="true"

        android:hint="Answer to Security Question 3"

        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"

        app:layout_constraintBottom_toTopOf="@id/loginEmailTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQ3"
        />

    <TextView
        android:id="@+id/loginEmailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Email"
        android:textSize="17sp"
        android:textStyle="bold"

        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/loginEnterEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginSQ3Answer"
        />

    <EditText
        android:id="@+id/loginEnterEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Enter Email Asscociated with User ID"

        android:layout_marginBottom="10dp"


        app:layout_constraintBottom_toTopOf="@id/LoginResetButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginEmailTitle"
        />

    <Button
        android:id="@+id/LoginResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Reset"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginEnterEmail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
