<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"


    tools:context=".RegistrationPage">

        <TextView

            android:id="@+id/RegisUBSTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="University Bazzar System"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"



            app:layout_constraintBottom_toTopOf="@id/RegisFullNameTitle"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/RegisFullNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="45dp"

            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:text="Full Name:"
            android:textStyle="bold"


            app:layout_constraintBottom_toTopOf="@id/RegisEmailTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/RegisFullName"

            app:layout_constraintTop_toBottomOf="@id/RegisUBSTitle" />

        <EditText
            android:id="@+id/RegisFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:hint="Enter Your First and Last Name"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"

            app:layout_constraintBottom_toTopOf="@id/RegisEmail"
            app:layout_constraintLeft_toRightOf="@id/RegisFullNameTitle"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/RegisUBSTitle"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/RegisEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="40dp"


            android:layout_marginRight="15dp"

            android:layout_marginBottom="0dp"
            android:text="Email:"
            android:textStyle="bold"


            app:layout_constraintBottom_toTopOf="@id/RegisUniversityTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/RegisEmail"

            app:layout_constraintTop_toBottomOf="@id/RegisFullNameTitle"
            />

        <EditText
            android:id="@+id/RegisEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"

            android:hint="Enter Email Address"
            android:layout_marginBottom="30dp"


            app:layout_constraintBottom_toTopOf="@id/RegisUniversitySpinner"
            app:layout_constraintLeft_toRightOf="@id/RegisEmailTitle"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/RegisFullName" />

        <TextView
            android:id="@+id/RegisUniversityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="35dp"
            android:layout_marginBottom="40dp"


            android:layout_marginRight="20dp"
            android:text="University:"
            android:textStyle="bold"


            app:layout_constraintBottom_toTopOf="@id/RegisCreateUserIDTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/RegisUniversitySpinner"

            app:layout_constraintTop_toBottomOf="@id/RegisEmailTitle" />


        <Spinner
            android:id="@+id/RegisUniversitySpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="0dp"
            android:layout_marginBottom="30dp"

            app:layout_constraintBottom_toTopOf="@id/RegisCreateUserIDTitle"
            app:layout_constraintLeft_toRightOf="@id/RegisUniversityTitle"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/RegisEmail"

            />


        <TextView
            android:id="@+id/RegisCreateUserIDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Create UserID:"
            android:textStyle="bold"


            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"


            app:layout_constraintBottom_toTopOf="@id/RegisCreateUserID"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toBottomOf="@id/RegisUniversityTitle"
            />

        <EditText
            android:id="@+id/RegisCreateUserID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"



            android:hint="Create a Username"


            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"


            app:layout_constraintBottom_toTopOf="@id/RegisCreatePasswordTitle"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RegisCreateUserIDTitle"
            />

        <TextView
            android:id="@+id/RegisCreatePasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Create Password"
            android:textStyle="bold"

            android:layout_marginTop="35dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"


            app:layout_constraintBottom_toTopOf="@id/RegisCreatePassword"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toBottomOf="@id/RegisCreateUserID"
            />

        <EditText
            android:id="@+id/RegisCreatePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:password="true"

            android:hint="Enter a password"

            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"


            app:layout_constraintBottom_toTopOf="@id/RegisConfirmPassword"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RegisCreatePasswordTitle"
            />


        <EditText
            android:id="@+id/RegisConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:password="true"

            android:hint="Confirm Password"

            android:layout_marginTop="15dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"


            app:layout_constraintBottom_toTopOf="@id/RegisterButton"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RegisCreatePassword"
            />


        <Button
            android:id="@+id/RegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Register"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RegisConfirmPassword"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
