<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ubsandroidapplication">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UBSAndroidApplication">

        <activity
            android:name=".exchangeTab"
            android:label="@string/title_activity_exchange_tab"
            android:theme="@style/Theme.UBSAndroidApplication.NoActionBar" />
        <activity android:name=".ClubViewYourClubs" />

        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".RegistrationPage"
            android:label="UBS Registration" />
        <activity
            android:name=".RegistrationSetSecurityQuestions"
            android:label="UBS Registration" />

        <activity
            android:name=".LoginPage"
            android:label="UBS Login" />
        <activity
            android:name=".LoginForgotPassword"
            android:label="UBS Forgot Password" />
        <activity
            android:name=".LoginResetPassword"
            android:label="UBS Forgot Password" />
        <activity
            android:name=".LoginResetSecurityQuestions"
            android:label="UBS Forgot Password" />

        <activity
            android:name=".ExchangeAnnoucement"
            android:label="Exchange Annoucement"
            android:theme="@style/Theme.UBSAndroidApplication.NoActionBar" />
        <activity android:name=".Search" />
        <!--
                <uses-library
                    android:name="com.google.android.wearable"
                    android:required="true" />

                       Set to true if your app is Standalone, that is, it does not require the handheld
                       app to run.

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
        -->
        <activity android:name=".UbsStart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>